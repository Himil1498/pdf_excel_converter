# ========================================
# PDF to Excel Converter - Backend Configuration
# ========================================
# Copy this file to .env and update with your values

# ========================================
# Server Configuration
# ========================================
PORT=5001
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=pdf_excel_converter

# ========================================
# File Upload Configuration
# ========================================
UPLOAD_DIR=./uploads
# Maximum file size in bytes (10485760 = 10MB)
MAX_FILE_SIZE=10485760
# Maximum number of files per batch (1000 recommended)
MAX_FILES_PER_BATCH=1000

# ========================================
# OpenAI Configuration (Optional)
# ========================================
# Leave OPENAI_API_KEY empty to use regex-based extraction only
# AI extraction is more accurate but slower and requires API credits
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# ========================================
# Processing Configuration
# ========================================
# Delay between processing batches (milliseconds)
BATCH_PROCESSING_DELAY=100
# Maximum number of PDFs to process concurrently
MAX_CONCURRENT_PROCESSES=5

# ========================================
# CORS Configuration
# ========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ========================================
# Rate Limiting
# ========================================
# Time window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per time window
RATE_LIMIT_MAX_REQUESTS=100
